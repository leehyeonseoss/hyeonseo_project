<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/chatback"
    tools:context=".category4">



    <LinearLayout
        android:id="@+id/chatContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">
            <!--이거에서 엔드빼니까 채팅창 위에 뜸, 이름 넣고 싶으면 이 코드에서 엔드만 빼고 만들면 될 듯-->
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A6A6A6"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat"
                android:text="입력한 문장입니다"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/boochat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#455680"
            android:text="부끄"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답장입니다"
            android:background="@drawable/chat2"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:layout_gravity="start" />

    </LinearLayout>



<TextView
        android:id="@+id/guideText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="100dp"
        android:text="기타와 관련한\n대화를 시작해보세요!"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:background="#455680"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/faqButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자주 묻는 질문과 답변"
            android:textSize="16sp"
            android:background="@drawable/background2"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/reselectCategoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카테고리 다시 선택하기"
            android:textSize="16sp"
            android:background="@drawable/background2"
            android:textColor="#000000"
            android:padding="12dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="메시지를 입력하세요."
            android:textSize="16sp"
            android:padding="8dp"
            android:textColorHint="@color/black"
            android:textColor="#000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력"
            android:id="@+id/send"
            android:background="#cccccc"/>

    </LinearLayout>

</LinearLayout>
